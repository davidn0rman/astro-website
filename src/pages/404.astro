<script>

  const dvd = document.getElementById('dvd') as HTMLDivElement;
  const svg = dvd.querySelector('#dvd svg') as SVGImageElement;

  let screenWidth = window.innerWidth;
  let screenHeight = window.innerHeight;
  const dvdWidth = dvd.offsetWidth;
  const dvdHeight = dvd.offsetHeight;
  let dvdX = Math.random() * (screenWidth - dvdWidth);
  let dvdY = Math.random() * (screenHeight - dvdHeight);
  let dvdXSpeed = 0.5;
  let dvdYSpeed = 0.5;
  svg.style.fill = "#FFFFFF";

  const getRandomColor = (): string => {
    const currentColor = svg.style.fill;
    const colors = ['#ff0000', '#00ff00', '#0000ff', '#ffff00', '#ff00ff', '#00ffff'];
    const newColour = colors[Math.floor(Math.random() * colors.length)];

    if (newColour === currentColor) {
      return getRandomColor();
    }
    return newColour;
  };

  const moveDVD = () => {
    if (screenWidth !== window.innerWidth || screenHeight !== window.innerHeight) {
      screenWidth = window.innerWidth;
      screenHeight = window.innerHeight;
    }

    dvdX += dvdXSpeed;
    dvdY += dvdYSpeed;

    if (dvdX + dvdWidth >= screenWidth || dvdX <= 0) {
      dvdXSpeed *= -1
      svg.style.fill = getRandomColor();
    }

    if (dvdY + dvdHeight >= screenHeight || dvdY <= 0) {
      dvdYSpeed *= -1;
      svg.style.fill = getRandomColor();
    }

    dvd.style.left = `${dvdX}px`;
    dvd.style.top = `${dvdY}px`;
  };

  const setCentral = () => {
    dvdX = (screenWidth - dvdWidth) / 2;
    dvdY = (screenHeight - dvdHeight) / 2;
  }

  setInterval(() => {
    // if the user prefers reduced motion, don't move the DVD
    if (window.matchMedia('(prefers-reduced-motion: reduce)').matches) {
      setCentral();
    }
    moveDVD();
  }, 1);

</script>

